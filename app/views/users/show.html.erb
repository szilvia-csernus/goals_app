<h1><%= @user.username%>'s Profile</h1>

<% unless @user.comments.empty? %>
    <%= render 'comments/index', user: @user, comments: @comments %>
<% end %>

<% if current_user %>
    <h2>New Comment</h2>
    <%= render 'comments/new', user: @user, sender_page: "user_page" %>
    <br>
<% end %>

<%= render 'goals/index', user: @user, goals: @goals %>
<br>
<%= link_to "New Goal", new_user_goal_url(@user) if current_user == @user %><br>
<%= link_to "All Users", users_url %><br>